  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="2.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Microsoft.MachineLearning.Api">
      <HintPath>Resources\AutoLoad\Microsoft.MachineLearning.Api.dll</HintPath>
    </Reference>
    <Reference Include="Microsoft.MachineLearning.Core">
      <HintPath>Resources\AutoLoad\Microsoft.MachineLearning.Core.dll</HintPath>
    </Reference>
    <Reference Include="Microsoft.MachineLearning.Data">
