    <Reference Include="Microsoft.MachineLearning.TlcMain">
      <HintPath>Resources\AutoLoad\Microsoft.MachineLearning.TlcMain.dll</HintPath>
    </Reference>
    <Reference Include="Microsoft.MachineLearning.UniversalModelFormat">
      <HintPath>Resources\AutoLoad\Microsoft.MachineLearning.UniversalModelFormat.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Update="ModelsAI\**\*">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
